{% if posts %}
    <ul class="txit-group txit-list-font-awesome">
        {% for post in posts %}
            {% if post.post_content %}
                <li class="txit-info">
                    <a target="_blank" href="{{ post.post_content }}">
                        <i class="{{ post.post_content | font_awesome }}" aria-hidden="true"></i>
                    </a>
                </li>
            {% endif %}
        {% endfor %}
    </ul>
{% endif %}